 <main class="container">
            <div class="col-md-6">
                <h1>Sign In</h1>
                <form class="form login-form">
                    <div class="mb-3">
                        {{!-- For filling out email and password to be checked at front js and routes --}}
                        <label for="email-login" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email-login" required>
                    </div>
                    <div class="mb-3">
                        <label for="password-login" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password-login" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Sign In</button>
                    <a href="/signup" class="btn btn-secondary mt-2">Create New Account</a>
                </form>
            </div>
        </div>
    </main>
