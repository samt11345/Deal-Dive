<main class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Sign Up</h1>
            <form class="form signup-form">
                {{!-- Enter info for users. Will be checked for qualification --}}
                <div class="mb-3">
                    <label for="username-signup">Username:</label>
                    <input class="form-control" type="text" id="username-signup" required style="width: 1300px;" />
                </div>
                <div class="mb-3">
                    <label for="email-signup" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email-signup" required style="width: 1300px;"/>
                </div>
                <div class="mb-3">
                    <label for="password-signup" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password-signup" required style="width: 1300px;" />
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
</main>

<script src="/js/signup.js"></script>