<div class="wrapper">
    <nav class="sidebar">
        <h2>Categories</h2>
        <ul>
            {{#each categories}}
            <li><a href="#">{{this}}</a></li>
            {{/each}}
        </ul>
    </nav>
    <div class="main-content">
        <h1>Welcome to {{siteName}}</h1>


        <h2>Featured Items</h2>
        <div class="row">
            {{#each featuredItems}}
            <div class="col-sm-4" style="padding-bottom: 20px;">
                <div class="card">
                    <img src="{{#if this.image}} {{this.image}} {{else}} http://via.placeholder.com/150 {{/if}}" class="card-img-top" alt="..." >
                    
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">Price: ${{this.price}}</p>
                        <p class="card-text">Location: {{this.location}}</p>
                        <a href="/post/{{this.id}}" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
