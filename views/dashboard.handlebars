<section class="card">

  <div class="main-content">
        <h2>Your Posts</h2>
        <div class="row">
            {{#each posts}}
            <div class="col-sm-4" style="padding-bottom: 20px;">
                <div class="card shadow-lg" style="min-height: 450px; max-height: 450px;">
                    <img src="{{#if this.image}} {{this.image}} {{else}} http://via.placeholder.com/150 {{/if}}"
                        class="card-img-top" alt="..." width="200px" height="250px" />

                    <div class="card-body">
                        <h5 class="card-title">{{truncate this.title 60}}</h5>
                        <p class="card-text">Price: ${{this.price}}</p>
                        <p class="card-text">Location: {{this.location}}</p>
                    </div>
                    <a href="/post/{{this.id}}" class="btn btn-primary">View Details</a>
                </div>
            </div>
            {{else}}
            <div style="display: flex; justify-content: center; align-items: center; height: 100vh; font-size: 2em;">
                <p>No items added</p>
            </div>
            {{/each}}
        </div>
    </div>

</section>